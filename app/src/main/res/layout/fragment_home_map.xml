<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:layoutDescription="@xml/fragment_home_map_scene"
    tools:context=".ui.client.ui.HomeMapFragment">

    <com.yandex.mapkit.mapview.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="-20dp"
        app:layout_constraintBottom_toTopOf="@id/cv_bottom_sheet"
        />

    <EditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:background="@drawable/poisk"
        android:hint="   Поиск"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/probikbtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/cv_bottom_sheet"
        app:layout_constraintEnd_toEndOf="parent"/>



    <ListView
        android:id="@+id/list_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="@color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/cv_green"
        app:layout_constraintStart_toEndOf="@+id/cv_red"
        app:layout_constraintTop_toBottomOf="@+id/et_search" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_green"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="#A5DA58"
        app:cardCornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_search">

        <Button
            android:id="@+id/btlv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="-10dp"
            android:backgroundTint="#A5DA58" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_red"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#DF074B"
        app:cardCornerRadius="100dp"
        app:layout_constraintStart_toStartOf="@+id/et_search"
        app:layout_constraintTop_toBottomOf="@+id/et_search">

        <Button
            android:id="@+id/btcancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="-10dp"
            android:backgroundTint="#DF074B" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_bottom_sheet"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:elevation="6dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view"
                android:layout_width="70dp"
                android:layout_height="4dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:backgroundTint="#403838"
                app:cornerRadius="16dp" />

            <LinearLayout
                android:id="@+id/ll_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_view"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/ll_ambulance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="4dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:importantForAccessibility="no"
                        android:padding="15dp"
                        android:elevation="5dp"
                        android:background="@drawable/bg_image"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ambulance" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="103"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_police"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="4dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:importantForAccessibility="no"
                        android:padding="15dp"
                        android:elevation="5dp"
                        android:background="@drawable/bg_image"
                        android:scaleType="centerCrop"
                        android:src="@drawable/police" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="102"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_fire"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="4dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:importantForAccessibility="no"
                        android:padding="15dp"
                        android:elevation="5dp"
                        android:background="@drawable/bg_image"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fire" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="104"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        />

                </LinearLayout>

            </LinearLayout>
            <EditText
                android:id="@+id/et_comment"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                android:background="@drawable/poisk"
                android:hint="   Ma'lumot yozing"
                android:imeOptions="actionSend"
                android:isScrollContainer="true"
                android:inputType="textMultiLine"
                android:layout_below="@id/ll_center"
                android:paddingLeft="15dp"
           />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.motion.widget.MotionLayout>