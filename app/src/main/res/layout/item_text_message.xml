<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/rect_oval_orange"
        android:id="@+id/message_root">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_author"
            android:layout_alignStart="@+id/tv_message"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:text="Ruslan"/>
        <TextView
            android:id="@+id/tv_message"
            android:layout_below="@id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="320dp"
            android:minWidth="150dp"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:paddingStart="8dp"
            android:textSize="16sp"
            android:paddingEnd="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            tools:text="MMMMMMMsfrejherjjjjrekrjehrejfdhfefgrhhjhvbhbfdbhvfbvdvhfdbhvjdfbfjhvdfjdfjvbfdjhvbhfvbhbfdhbM"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_date"
            android:textColor="@color/whiter"
            android:textStyle="normal|italic"
            android:layout_below="@id/tv_message"
            android:layout_alignEnd="@+id/tv_message"
            android:layout_marginEnd="8dp"
            android:layout_margin="4dp"
            android:textSize="12sp"
            tools:text="3/15/2012 3;00 PM"/>

    </RelativeLayout>

</FrameLayout>